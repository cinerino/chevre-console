<div class="material-datatables">
    <div id="datatables_wrapper" class="dataTables_wrapper dt-bootstrap4">
        <div class="row">
            <div class="col-sm-12">
                <form method="post">
                    <% /* 共通Hiddenコントロール */ %>
                    <%- include('../../common/master/_hidden') %>

                    <div class="form-row">
                        <div class="form-group bmd-form-group col-md-2">
                            <label for="paymentMethodType" class="bmd-label-static">
                                決済方法区分
                            </label>
                            <input type="text" class="form-control" name="paymentMethodType" id="paymentMethodType" placeholder="" maxlength=64>
                        </div>
                        <div class="form-group bmd-form-group col-md-2">
                            <label for="seller" class="bmd-label-static">
                                販売者
                            </label>
                            <select class="form-control" name="seller" id="seller" style="width: 100%;">
                            </select>
                        </div>
                        <div class="form-group bmd-form-group col-md-2">
                            <label for="serviceOutput[reservationFor][id]" class="bmd-label-static">
                                イベントID
                            </label>
                            <input type="text" class="form-control" name="serviceOutput[reservationFor][id]" id="serviceOutput[reservationFor][id]" placeholder="" maxlength=64>
                        </div>
                        <div class="form-group bmd-form-group col-md-2">
                            <label for="identifier" class="bmd-label-static">
                                購入管理番号
                            </label>
                            <input type="text" class="form-control" name="identifier" id="identifier" placeholder="8559919013" maxlength=64>
                        </div>
                        <div class="form-group bmd-form-group col-md-2">
                            <label for="accessCode" class="bmd-label-static">
                                PINコード
                            </label>
                            <input type="text" class="form-control" name="accessCode" id="accessCode" placeholder="1234" maxlength=64>
                        </div>
                    </div>
                </form>
            </div>
        </div>
        <div id="list" style="display:none;" class="row">
            <div class="col-sm-12 table-responsive">
                <table id="datatables" class="table table-no-bordered table-hover dataTable dtr-inline" cellspacing="0"
                    width="100%" style="width: 100%;" role="grid" aria-describedby="datatables_info">
                    <thead class="text-primary">
                        <tr>
                            <th>購入管理番号</th>
                            <th>券種区分</th>
                            <th>有効期間</th>
                        </tr>
                    </thead>

                    <tbody>
                        <tr id="templateRow" _id="$identifier$">
                            <td name="identifier">$identifier$</td>
                            <td name="serviceType">$serviceType$</td>
                            <td name="validThrough|date:YY-MM-DD HH:mm:ssZ">$validThrough$</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-12 col-md-5">
                <div class="dataTables_info" id="datatables_info" role="status" aria-live="polite">
                </div>
            </div>
            <div class="col-sm-12 col-md-7">
                <div class="dataTables_paginate paging_full_numbers" id="datatables_paginate">
                </div>
                <div id="pager" class="div_pager_parent float-right"></div>
            </div>
        </div>
    </div>
</div>