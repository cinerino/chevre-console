<div class="card card-plain">
    <div class="card-body">
        <div class="toolbar">
            <!--        Here you can write extra buttons/actions for the toolbar              -->
            <a class="btn btn-primary btn-ok" href="javascript:void(0)">
                <i class="material-icons">save</i> 保存</a>
        </div>

        <ul class="nav nav-pills nav-pills-dark mt-3" role="tablist">
            <li class="nav-item">
                <a class="nav-link active" data-toggle="tab" href="#link1" role="tablist">
                    基本設定
                </a>
            </li>
        </ul>

        <div class="tab-content">
            <div class="tab-pane active show" id="link1">
                <% if (isNew) { %>
                <% } else { %>
                <input type="hidden" name="id" value="<%= forms.id %>">
                <% } %>

                <div class="form-row">
                    <div class="form-group bmd-form-group col-md-6">
                        <label for="familyName" class="bmd-label-static">
                            Family Name<span class="text-danger">＊</span>
                        </label>
                        <input type="text" class="form-control" name="familyName" id="familyName" placeholder=""
                            maxlength=64 value="<%= forms.familyName %>">
                        <% if (errors && errors['familyName']) { %>
                        <span class="bmd-help text-danger d-block">
                            <%- errors['familyName'].msg %>
                        </span>
                        <% } %>
                    </div>
                    <div class="form-group bmd-form-group col-md-6">
                        <label for="givenName" class="bmd-label-static">
                            Given Name<span class="text-danger">＊</span>
                        </label>
                        <input type="text" class="form-control" name="givenName" id="givenName" placeholder=""
                            maxlength=64 value="<%= forms.givenName %>">
                        <% if (errors && errors['givenName']) { %>
                        <span class="bmd-help text-danger d-block">
                            <%- errors['givenName'].msg %>
                        </span>
                        <% } %>
                    </div>
                    <div class="form-group bmd-form-group col-md-6">
                        <label for="telephone" class="bmd-label-static">
                            Telephone<span class="text-danger">＊</span>
                        </label>
                        <input type="text" class="form-control" name="telephone" id="telephone" placeholder=""
                            maxlength=64 value="<%= forms.telephone %>">
                        <% if (errors && errors['telephone']) { %>
                        <span class="bmd-help text-danger d-block">
                            <%- errors['telephone'].msg %>
                        </span>
                        <% } %>
                    </div>
                    <div class="form-group bmd-form-group col-md-6">
                        <label for="email" class="bmd-label-static">
                            Email<span class="text-danger">＊</span>
                        </label>
                        <input type="text" class="form-control" name="email" id="email" placeholder=""
                            maxlength=64 value="<%= forms.email %>">
                        <% if (errors && errors['email']) { %>
                        <span class="bmd-help text-danger d-block">
                            <%- errors['email'].msg %>
                        </span>
                        <% } %>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>
<!-- end card -->